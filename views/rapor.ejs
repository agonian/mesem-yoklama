<%- include('partials/header') %>

<div class="card shadow-sm border-success mb-4">
        <div class="card-header bg-success text-white">
            <h6 class="m-0"><i class="fa-solid fa-file-excel me-2"></i>Devamsızlık Çizelgeleri</h6>
        </div>
        <div class="card-body bg-light">
            <div class="row g-4">
                
                <div class="col-md-6 border-end">
                    <h6 class="fw-bold text-success mb-3"><i class="fa-solid fa-1 me-2"></i>Tekli İndir</h6>
                    <form action="/rapor-indir" method="GET">
                        <% let isletmeAdlari = [...new Set(raporlar.map(r => r.isletme))]; %>
                        
                        <div class="mb-2">
                            <select name="isletmeAdi" class="form-select form-select-sm" required>
                                <option value="">İşletme Seçiniz...</option>
                                <% isletmeAdlari.forEach(ad => { %>
                                    <option value="<%= ad %>"><%= ad %></option>
                                <% }) %>
                            </select>
                        </div>

                        <div class="d-flex gap-2 mb-2">
                            <select name="ay" class="form-select form-select-sm">
                                <option value="2" selected>Şubat</option>
                                <option value="3">Mart</option>
                                <option value="4">Nisan</option>
                                <option value="5">Mayıs</option>
                                <option value="6">Haziran</option>
                            </select>
                            <select name="yil" class="form-select form-select-sm">
                                <option value="2026" selected>2026</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-sm btn-outline-success w-100 fw-bold">Seçili Olanı İndir</button>
                    </form>
                </div>

                <div class="col-md-6">
                    <h6 class="fw-bold text-dark mb-3"><i class="fa-solid fa-list-ol me-2"></i>Toplu Liste (Tek Dosya)</h6>
                    <form action="/rapor-indir-tek" method="GET">
                        <div class="d-flex gap-2 mb-2">
                            <select name="ay" class="form-select form-select-sm">
                                <option value="2" selected>Şubat</option>
                                <option value="3">Mart</option>
                                <option value="4">Nisan</option>
                                <option value="5">Mayıs</option>
                                <option value="6">Haziran</option>
                            </select>
                            <select name="yil" class="form-select form-select-sm">
                                <option value="2026" selected>2026</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-sm btn-dark w-100 fw-bold">Tüm Listeyi İndir</button>
                    </form>
                    <div class="text-center mt-2">
                         <small class="text-muted" style="font-size: 0.75rem;">* Alt alta sıralı, her sayfada 2 işletme.</small>
                    </div>
                </div>

            </div>
        </div>
    </div>

<div class="container pb-5">

    <% if (typeof msg != 'undefined' && msg) { %>
        <div class="alert alert-primary alert-dismissible fade show">
            <%= msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold m-0"><i class="fa-solid fa-clock-rotate-left me-2"></i>Yoklama Geçmişi</h4>
    </div>

    <div class="card shadow border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Tarih</th>
                            <th>İşletme Adı</th>
                            <th class="text-center">Öğrenci Sayısı</th>
                            <th class="text-end">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (raporlar.length === 0) { %>
                            <tr><td colspan="4" class="text-center p-5 text-muted">Henüz yoklama kaydı bulunmuyor.</td></tr>
                        <% } %>

                        <% raporlar.forEach(rapor => { %>
                            <tr>
                                <td class="fw-bold text-secondary"><i class="fa-regular fa-calendar me-2"></i><%= rapor.tarih %></td>
                                
                                <td class="fw-bold text-dark"><%= rapor.isletme %></td>
                                
                                <td class="text-center">
                                    <span class="badge bg-primary rounded-pill px-3"><%= rapor.ogrenciSayisi %> Kayıt</span>
                                </td>

                                <td class="text-end">
                                    <a href="/rapor-duzenle?isletme=<%= encodeURIComponent(rapor.isletme) %>&tarih=<%= encodeURIComponent(rapor.tarih) %>" 
                                       class="btn btn-sm btn-outline-primary fw-bold me-1">
                                        <i class="fa-solid fa-pen-to-square me-1"></i>Düzenle
                                    </a>

                                    <a href="/rapor-sil-grup?isletme=<%= encodeURIComponent(rapor.isletme) %>&tarih=<%= encodeURIComponent(rapor.tarih) %>" 
                                       onclick="return confirm('Bu tarihteki TÜM yoklamayı silmek istediğinize emin misiniz?')" 
                                       class="btn btn-sm btn-outline-danger">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>